<div class="panel red no-borders">
	<div class="panel-heading">Required</div>
	<div class="panel-body">
		<div class="form-horizontal">
			<div class="form-group">
				<label for="name" class="col-sm-2 control-label">Name</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="name" name="name" placeholder="Field name" value="<%= this.record.name||'' %>">
				</div>
			</div>
			<div class="form-group">
				<label for="description" class="col-sm-2 control-label">Description</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="description" name="description" placeholder="Description" value="<%= this.record.description||'' %>">
				</div>
			</div>

		</div>
	</div>
</div>
